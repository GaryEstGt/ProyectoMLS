@model IEnumerable<Lab1MLS.Models.Jugador>

@{
    ViewBag.Title = "Busqueda";
}

<h2>Busqueda</h2>

<p>
    @using (Html.BeginForm("Busqueda", "Jugador", FormMethod.Post))
    {
        @Html.RadioButton("Nombre/Apellido","opcion1")
        @Html.RadioButton("Posicion", "opcion2")
        @Html.RadioButton("Salario", "opcion3")
        @Html.RadioButton("Club", "opcion4")
    }
</p>
@using (Html.BeginForm())
{
    @Html.TextBox("filter")
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Filtrar" class="btn btn-default"/>
        </div>
    </div>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Position)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SalarioBase)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SalarioTotal)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Club)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Position)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SalarioBase)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SalarioTotal)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Club)
        </td>
        <td>
           
        </td>
    </tr>
}

</table>
